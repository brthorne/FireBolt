<cinematicModel millisPerTick="1">
  <domainActions>
		<domainAction name="buy-item" > 
      <params>
        <param name="actor" />
        <param name="start-tick" />
        <param name="end-tick" />
      </params>
      <animateActions>
        <animateAction actorNameParamName="actor" startTickParamName="start-tick" endTickParamName="end-tick"/>
      </animateActions>
    </domainAction>
    <domainAction name="enter" >
      <params>
        <param name="actor" />
        <param name="origin" />
        <param name="start-tick" />
      </params>
      <createActions>
        <createAction actorNameParamName="actor" startTickParamName="start-tick" originParamName="origin" />
      </createActions>
    </domainAction>
    <domainAction name="exit" >
      <params>
        <param name="actor" />
        <param name="start-tick" />
      </params>
      <createActions/>        
      <destroyActions>
        <destroyAction actorNameParamName="actor" startTickParamName="start-tick"/>
      </destroyActions>
    </domainAction>
    <domainAction name="move" >
      <params>
        <param name="actor" />
        <param name="start-tick" />        
        <param name="end-tick" />
        <param name="destination" />        
      </params>
      <createActions/>
      <destroyActions/>
      <moveActions>
        <moveAction  actorNameParamName="actor" startTickParamName="start-tick" endTickParamName="end-tick" destinationParamName="destination"/>
      </moveActions>
      <rotateActions>
        <rotateAction  actorNameParamName="actor" startTickParamName="start-tick" endTickParamName="end-tick" destinationParamName="destination" maxDuration="400"/>
      </rotateActions>
      <animateActions>
        <animateAction  actorNameParamName="actor" startTickParamName="start-tick" endTickParamName="end-tick"/>    
      </animateActions>
    </domainAction>
    <domainAction name="rotate">
      <params>
        <param name="actor" />
        <param name="start-tick" />
        <param name="end-tick" />
        <param name="destination" />
      </params>
      <createActions/>
      <destroyActions/>
      <moveActions/>        
      <rotateActions>
        <rotateAction actorNameParamName="actor" startTickParamName="start-tick" endTickParamName="end-tick" destinationParamName="destination"/>
      </rotateActions>
      <!--<animateActions>
        <animateAction actorNameParamId="0" startTickParamId="1" endTickParamId="2"/> 
      </animateActions>-->
    </domainAction>
  </domainActions>
  <actors>
    <actor name="pudge" id="2" model="m005" >
      <animations>
        <animation name="pudge_attack1.fbx" id="0" />
        <animation name="UNTY_Sneak_tk04.fbx" id="1"/>
        <animation name="Unity_Falling_Down_Dying_tk01.fbx" id="2"/>
        <animation name="pudge_walk.fbx" id="3"/>
      </animations>
    </actor>
  </actors>
	<animationMappings>
		<animationMapping actionName="buy-item" actionParamName="actor" actorName="pudge" animationId="0">
			<animationProperties  loopAnimation="true" effectorTimeOffset="50"/>		  
		</animationMapping>
  </animationMappings>
</cinematicModel>
