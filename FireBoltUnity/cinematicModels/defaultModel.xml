<?xml version="1.0" encoding="utf-8"?>
<cinematicModel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" millisPerTick="1" domainDistancePerEngineDistance="1" xmlns="http://liquidnarrative.csc.ncsu.edu/cinematicModel/v0.1">
  <smartModelSettings maxAnimationSearchDepth="2" maxActorSearchDepth="2" />
  <terrain terrainFileName="warehouse_prefab.prefab" />
  <domainActions>
    <domainAction name="move">
      <params>
        <param name="actor" />
        <param name="origin" />
        <param name="destination" />
        <param name="end-angle" />
      </params>
      <createActions />
      <destroyActions />
      <attachActions />
      <translateActions>
        <translateAction actorNameParamName="actor" destinationParamName="destination" originParamName="origin" />
      </translateActions>
      <rotateActions>
        <rotateAction actorNameParamName="actor" maxDuration="400" destinationParamName="end-angle" />
      </rotateActions>
      <animateActions />
    </domainAction>
    <domainAction name="walk">
      <params>
        <param name="actor" />
        <param name="origin" />
        <param name="destination" />
        <param name="end-angle" />
      </params>
      <createActions />
      <destroyActions />
      <attachActions />
      <translateActions>
        <translateAction actorNameParamName="actor" destinationParamName="destination" originParamName="origin" />
      </translateActions>
      <rotateActions>
        <rotateAction actorNameParamName="actor" maxDuration="400" destinationParamName="end-angle" />
      </rotateActions>
      <animateActions>
        <animateAction actorNameParamName="actor" name="walk" />
      </animateActions>
    </domainAction>
    <domainAction name="run">
      <params>
        <param name="actor" />
        <param name="origin" />
        <param name="destination" />
        <param name="end-angle" />
      </params>
      <createActions />
      <destroyActions />
      <translateActions>
        <translateAction actorNameParamName="actor" destinationParamName="destination" originParamName="origin" />
      </translateActions>
      <rotateActions>
        <rotateAction actorNameParamName="actor" maxDuration="400" destinationParamName="end-angle" />
      </rotateActions>
      <animateActions>
        <animateAction actorNameParamName="actor" name="walk" />
      </animateActions>
    </domainAction>
    <domainAction name="idle">
      <params>
        <param name="actor" />
      </params>
      <createActions />
      <destroyActions />
      <attachActions />
      <translateActions />
      <rotateActions />
      <animateActions>
        <animateAction actorNameParamName="actor" name="idle" />
      </animateActions>
    </domainAction>
	
	<!-- Testing faceAction -->
	<domainAction name="surprise">
      <params>
        <param name="actor" />
      </params>
      <createActions />
      <destroyActions />
      <attachActions />
      <translateActions />
      <rotateActions />
      <animateActions>
        <animateAction actorNameParamName="actor" name="idle" />
      </animateActions>
	  <faceActions>
		<faceAction actorNameParamName="actor" emotion="surprised"/>
	  </faceActions>
    </domainAction>
	
    <domainAction name="create">
      <params>
        <param name="actor" />
        <param name="position" />
        <param name="end-angle" />
      </params>
      <createActions>
        <createAction actorNameParamName="actor" originParamName="position" orientationParamName="end-angle" />
      </createActions>
      <destroyActions />
      <attachActions />
      <translateActions />
      <rotateActions />
      <animateActions />
    </domainAction>
    <domainAction name="remove">
      <params>
        <param name="actor" />
      </params>
      <createActions />
      <destroyActions>
        <destroyAction actorNameParamName="actor" />
      </destroyActions>
      <translateActions />
      <rotateActions />
      <animateActions />
    </domainAction>
    <domainAction name="attack">
      <params>
        <param name="actor" />
      </params>
      <createActions />
      <destroyActions />
      <attachActions />
      <translateActions />
      <rotateActions />
      <animateActions>
        <animateAction actorNameParamName="actor" name="attack" />
      </animateActions>
	  <faceActions/>
    </domainAction>
  </domainActions>
  <actors>
    <actor name="hero" model="m005.fbx" pointOfInterest=".7">
      <animationMappings>
        <animationMapping animateActionName="walk" animationName="humanoid_sneak" loopAnimation="true" />
        <animationMapping animateActionName="idle" animationName="humanoid_idle" loopAnimation="true" />
        <animationMapping animateActionName="die" animationName="humanoid_dying" loopAnimation="true" />
      </animationMappings>
    </actor>
    <actor name="skywrath_mage" model="skywrath_mage_model.fbx" pointOfInterest="0">
      <animationMappings>
        <animationMapping animateActionName="walk" animationName="swm_walk" loopAnimation="true" />
        <animationMapping animateActionName="idle" animationName="swm_idle" loopAnimation="true" />
        <animationMapping animateActionName="attack" animationName="swm_attack" loopAnimation="true" />
      </animationMappings>
    </actor>
    <actor name="crate" model="Big_box.FBX" pointOfInterest="0">
      <animationMappings />
    </actor>
    <actor name="fire_extinguisher" model="fire_extinguisher.fbx" pointOfInterest="0">
      <animationMappings />
    </actor>
  </actors>
  <animations>
    <animation name="swm_walk" fileName="skywrath_mage_walk.fbx">
      <animationIndices />
    </animation>
    <animation name="swm_idle" fileName="skywrath_mage_idle.fbx">
      <animationIndices />
    </animation>
    <animation name="swm_attack" fileName="skywrath_mage_attack.fbx">
      <animationIndices />
    </animation>
    <animation name="pudge_walk" fileName="pudge_walk.fbx">
      <animationIndices />
    </animation>
    <animation name="pudge_idle" fileName="pudge_idle.fbx">
      <animationIndices />
    </animation>
    <animation name="pudge_attack" fileName="pudge_attack1.fbx">
      <animationIndices />
    </animation>
	
	<animation name="humanoid_sneak" fileName="humanoid_sneak.fbx">
      <animationIndices />
    </animation>
	<animation name="humanoid_idle" fileName="humanoid_idle.fbx">
      <animationIndices />
    </animation>
	<animation name="humanoid_dying" fileName="humanoid_dying.fbx">
      <animationIndices />
    </animation>
  </animations>
</cinematicModel>
